<h1>Editing recipe</h1>

<%= error_messages_for :recipe %>

<% form_for(@recipe) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Oven temp</b><br />
    <%= f.text_field :oven_temp %>
  </p>

  <p>
    <b>Directions</b><br />
    <%= f.text_area :directions %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>
