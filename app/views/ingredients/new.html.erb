<h1>New Ingredient</h1>

<%= error_messages_for :ingredient %>

<% form_for :ingredient, @ingredient, :url => { :action => "create" }  do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

<% fields_for :amount do |f| %>
  <p>
    <b>Amount</b><br />
    <%= f.text_field :ing_amnt %>
  </p>
<% end %>
<% fields_for :recipe do |f| %>
  <%= f.hidden_field :id, :value => params[:recipe_id] %>
<% end %>
  <p>
    <%= f.submit "Create" %>
  </p>

<% end %>

<%= link_to 'Back', recipes_path %>
